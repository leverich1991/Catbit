<h1>Steps</h1>
<div id="steps" style="height: 200px;"></div>
	<script>
	new Morris.Line({
	element: 'steps',
	data: [
    { day: '1', value: <%= @daily_activity['summary']['steps'] %> },
    { day: '2', value: 250 },
    { day: '3', value: 1500 },
    { day: '4', value: 550 },
    { day: '5', value: 500 },
	{ day: '6', value: 910 },
	{ day: '7', value: 150}
  ],
  xkey: 'day',
  parseTime: false,
  ykeys: ['value'],
  labels: ['Value'],
  lineColors: ['green']
});</script>