<h1>Distance</h1>
	<div id="distance" style="height: 200px;"></div>
	<script>
	new Morris.Line({
	element: 'distance',
	data: [
    { day: '1', value: <%= @daily_activity['summary']['distances'][0]['distance']%> },
    { day: '2', value: 0.5 },
    { day: '3', value: 0.4 },
    { day: '4', value: 1.8 },
    { day: '5', value: 1.2 }
  ],
  xkey: 'day',
  parseTime: false,
  ykeys: ['value'],
  labels: ['Value'],
  lineColors: ['purple']
});</script>